<%- include('../partials/head') %>

<section class="section" id="trainers">
    <div class="container">
        <div class="row">
            <div class="col-lg-6 offset-lg-3">
                <div class="section-heading">
                    <h2>Your <em>Workouts</em></h2>
                    <img src="/assets/line-dec.png" alt="">
                    <p>A list of your workout plans.</p>
                    <div class="mt-3">
                        <a href="/workout-plans/<%= user._id %>/new-plan" type="submit" class="btn btn-dark p-2">Add a new Plan</a> 
                    </div>                 
                </div>
            </div>
        </div>
    </div>
</section>

<div class="container">
  <div class="card-container">
      <% workouts.forEach(workout => { %>
            <div class="user-workouts">
                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title"><%= workout.name %></h5>
                            <h6 class="card-subtitle mb-2 text-muted"><%= workout.difficultyLevel %></h6>
                            <p class="card-text"><span style="color: #333333;">Days per week: </span><%= workout.daysPerWeek %></p>
                            <p class="card-text"><span style="color: #333333;">Time per workout: </span><%= workout.timePerWorkout %></p>
                            <p class="card-text"><span style="color: #333333;">Equipment required: </span> <%= workout.equipmentRequired %></p>
                            <p class="card-text mt-1"><span style="color: #333333;">Description: </span><%- workout.description ? workout.description.replace(/\r\n|\r|\n/g, '<br>') : '' %></p>
                            <div class="mt-3">           
                            <a href="/workout-plans/<%= user._id %>/view/<%= workout._id %>">View Workout Plan</a>
                            </div>
    
                        </div>
                    </div>
            </div>
                            
        <% }) %>
    </div>
</div>

<%- include('../partials/footer') %>

