<%- include('../partials/head') %>

<section class="section" id="trainers">
    <div class="container">
        <div class="row">
            <div class="col-lg-6 offset-lg-3">
                <div class="section-heading">
                    <h2>Add your <em>plan</em></h2>
                    <img src="/assets/line-dec.png" alt="">
                    <p>Create your new workout plan.</p>                     
                </div>
            </div>
        </div>
    </div>
</section>

<div class="container">
    <div class="d-flex justify-content-center">
        <div class="contact-form col-lg-6 col-md-6 col-xs-12">
            <form id="contact" action="/workout-plans/<%= user._id %>" method="POST">
                <div class="row">
                    <div class="col-lg-12">
                        <label for="name">Plan name: </label>
                        <input type="text" name="name">
                    </div>
                </div>
                <div class="row">
                    <div class="col-lg-12">
                        <label for="difficultyLevel">Difficulty Level: </label>
                        <input type="text" name="difficultyLevel">
                    </div>
                </div>
                <div class="row">
                    <div class="col-lg-12">
                        <label for="duration">Duration in weeks: </label>
                        <input type="number" name="duration">
                    </div>
                </div>
                <div class="row">
                    <div class="col-lg-12">
                        <label for="daysPerWeek">Days per week: </label>
                        <input type="number" name="daysPerWeek">
                    </div>
                </div>
                <div class="row">
                    <div class="col-lg-12">
                        <label for="timePerWorkout">Time per workout: </label>
                        <input type="number" name="timePerWorkout">
                    </div>
                </div>
                <div class="row">
                    <div class="col-lg-12">
                        <label for="equipmentRequired">Equipment Required: </label>
                        <input type="text" name="equipmentRequired">
                    </div>
                </div>
                <div class="row">
                    <div class="col-lg-12">
                        <label for="description">Description: </label>
                        <textarea type="text" name="description"></textarea>
                    </div>
                </div>                
                <div class="row">
                    <div class="col-lg-12">
                        <button type="submit" class="btn btn-primary">Create</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>


<%- include('../partials/footer') %>

