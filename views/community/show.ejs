<%- include('../partials/head') %>

<section class="section" id="trainers">
    <div class="container">
        <div class="row">
            <div class="col-lg-6 offset-lg-3">
                <div class="section-heading">
                    <h2><%= currentUser.username %>'s <em>Plans</em></h2>
                    <img src="/assets/line-dec.png" alt="Graphical element">
                    <p>Total workout list</p>                     
                </div>
            </div>
        </div>
    </div>
</section>

<div class="container">
  <div class="card-container">
      <% workouts.forEach(workout => { %>
          <section>
            <div class="user-workouts">

                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title"><%= workout.name %></h5>
                        <h6 class="card-subtitle mb-4 text-muted"><%= workout.difficultyLevel %></h6>
                        <p class="card-text mt-1" ><span style="color: #333333;">Workout duration: </span><%= workout.duration %> weeks</p>
                        <p class="card-text mt-1"><span style="color: #333333;">Days per week: </span><%= workout.daysPerWeek %></p>
                        <p class="card-text mt-1"><span style="color: #333333;">Time per workout: </span><%= workout.timePerWorkout %></p>
                        <p class="card-text mt-1"><span style="color: #333333;">Equipment required: </span><%= workout.equipmentRequired %></p>
                        <p class="card-text mt-1"><span style="color: #333333;">Description: </span><%- workout.description ? workout.description.replace(/\r\n|\r|\n/g, '<br>') : '' %></p>
                    </div>
                </div>
            </div>

          </section>
      <% }) %>
  </div>
</div>

<%- include('../partials/footer') %>